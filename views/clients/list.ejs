<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lista de Clientes</title>
  </head>
  <body>
    <h1>Lista de Clientes</h1>

    <table border="1">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Fecha de Creación</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if (clients.length > 0) { %> <% clients.forEach(client => { %>
        <tr>
          <td><%= client.id_cli %></td>
          <td><%= client.nombre_cli %></td>
          <td><%= client.fecha_creacion %></td>
          <td>
            <a href="/clients/<%= client.id_cli %>">Ver</a> |
            <a href="/clients/<%= client.id_cli %>/edit">Editar</a> |
            <form
              action="/clients/<%= client.id_cli %>/delete"
              method="POST"
              style="display: inline"
            >
              <button type="submit">Eliminar</button>
            </form>
          </td>
        </tr>
        <% }); %> <% } else { %>
        <tr>
          <td colspan="4">No hay clientes disponibles.</td>
        </tr>
        <% } %>
      </tbody>
    </table>

    <br />
    <a href="/">Volver a la Página de Inicio</a>
  </body>
</html>
